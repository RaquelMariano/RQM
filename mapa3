  <script type="text/javascript">
    var map;
    var layer_0;
    var layer_1;
    var layer_2;
    var layer_3;
    function initialize() {
      map = new google.maps.Map(document.getElementById('map-canvas'), {
        center: new google.maps.LatLng(52.84934305854821, 45.20477744062497),
        zoom: 2,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      });
      layer_0 = new google.maps.FusionTablesLayer({
        query: {
          select: "col2",
          from: "1aV6eqezyjszrHXZboAD0nM5XPLRlQLGvg9sYnjN7"
        },
        map: map,
        styleId: 2,
        templateId: 2
      });
      layer_1 = new google.maps.FusionTablesLayer({
        query: {
          select: "col2",
          from: "1aV6eqezyjszrHXZboAD0nM5XPLRlQLGvg9sYnjN7"
        },
        map: map,
        styleId: 2,
        templateId: 2
      });
      layer_2 = new google.maps.FusionTablesLayer({
        query: {
          select: "col2",
          from: "1aV6eqezyjszrHXZboAD0nM5XPLRlQLGvg9sYnjN7"
        },
        map: map,
        styleId: 2,
        templateId: 2
      });
      layer_3 = new google.maps.FusionTablesLayer({
        query: {
          select: "col2",
          from: "1aV6eqezyjszrHXZboAD0nM5XPLRlQLGvg9sYnjN7"
        },
        map: map,
        styleId: 2,
        templateId: 2
      });
    }
    function changeMap_0() {
      var whereClause;
      var searchString = document.getElementById('search-string_0').value.replace(/'/g, "\\'");
      if (searchString != '--Select--') {
        whereClause = "'Building Name' CONTAINS IGNORING CASE '" + searchString + "'";
      }
      layer_0.setOptions({
        query: {
          select: "col2",
          from: "1aV6eqezyjszrHXZboAD0nM5XPLRlQLGvg9sYnjN7",
          where: whereClause
        }
      });
    }
    function changeMap_1() {
      var whereClause;
      var searchString = document.getElementById('search-string_1').value.replace(/'/g, "\\'");
      if (searchString != '--Select--') {
        whereClause = "'Building Use' = '" + searchString + "'";
      }
      layer_1.setOptions({
        query: {
          select: "col2",
          from: "1aV6eqezyjszrHXZboAD0nM5XPLRlQLGvg9sYnjN7",
          where: whereClause
        }
      });
    }
    function changeMap_2() {
      var whereClause;
      var searchString = document.getElementById('search-string_2').value.replace(/'/g, "\\'");
      if (searchString != '--Select--') {
        whereClause = "'Country' = '" + searchString + "'";
      }
      layer_2.setOptions({
        query: {
          select: "col2",
          from: "1aV6eqezyjszrHXZboAD0nM5XPLRlQLGvg9sYnjN7",
          where: whereClause
        }
      });
    }
    function changeMap_3() {
      var whereClause;
      var searchString = document.getElementById('search-string_3').value.replace(/'/g, "\\'");
      if (searchString != '--Select--') {
        whereClause = "'Main Technology' = '" + searchString + "'";
      }
      layer_3.setOptions({
        query: {
          select: "col2",
          from: "1aV6eqezyjszrHXZboAD0nM5XPLRlQLGvg9sYnjN7",
          where: whereClause
        }
      });
    }
    google.maps.event.addDomListener(window, 'load', initialize);
  </script>
